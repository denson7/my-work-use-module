            <a href="<?php echo $_attachment->getAttachmentUrl(); ?>"><?php echo $_attachment->getTitle()?></a>
            <?php echo $this->__('Size: (' .$_fileSize  . ')'); ?>
            <br />
        </div>
    <?php endforeach; ?>
</div>
