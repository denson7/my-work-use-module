<config>
    <modules>
        <Andreitara_Productsselector>
            <version>0.1.0</version>
        </Andreitara_Productsselector>
    </modules>
    <frontend>
        <routers>
            <productsselector>
                <use>standard</use>
                <args>
                    <module>Andreitara_Productsselector</module>
                    <frontName>productsselector</frontName>
                </args>
            </productsselector>
        </routers>
        <layout>
            <updates>
                <productsselector>
                    <file>productsselector.xml</file>
                </productsselector>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <productsselector>
                <use>admin</use>
                <args>
                    <module>Andreitara_Productsselector</module>
                    <frontName>productsselector</frontName>
                </args>
            </productsselector>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <productsselector module="productsselector">
                <title>ProductsSelector</title>
                <sort_order>71</sort_order>               
                <children>
                    <items module="productsselector">
                        <title>Manage Items</title>
                        <sort_order>0</sort_order>
                        <action>productsselector/adminhtml_productsselector</action>
                    </items>
                </children>
            </productsselector>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Andreitara_Productsselector>
                            <title>Productsselector Module</title>
                            <sort_order>10</sort_order>
                        </Andreitara_Productsselector>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <productsselector>
                    <file>productsselector.xml</file>
                </productsselector>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <productsselector>
                <class>Andreitara_Productsselector_Model</class>
                <resourceModel>productsselector_mysql4</resourceModel>
            </productsselector>
            <productsselector_mysql4>
                <class>Andreitara_Productsselector_Model_Mysql4</class>
                <entities>
                    <productsselector>
                        <table>productsselector</table>
                    </productsselector>
                </entities>
            </productsselector_mysql4>
        </models>
        <resources>
            <productsselector_setup>
                <setup>
                    <module>Andreitara_Productsselector</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productsselector_setup>
            <productsselector_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productsselector_write>
            <productsselector_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productsselector_read>
        </resources>
        <blocks>
            <productsselector>
                <class>Andreitara_Productsselector_Block</class>
            </productsselector>
        </blocks>
        <helpers>
            <productsselector>
                <class>Andreitara_Productsselector_Helper</class>
            </productsselector>
        </helpers>
    </global>
</config>