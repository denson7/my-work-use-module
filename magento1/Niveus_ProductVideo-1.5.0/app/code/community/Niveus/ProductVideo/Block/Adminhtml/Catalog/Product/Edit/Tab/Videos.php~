<?phpclass Niveus_ProductVideo_Block_Adminhtml_Catalog_Product_Edit_Tab_Videos extends Mage_Adminhtml_Block_Widget {    protected $videosCollection = null;		public function __construct()        {		parent::__construct();                $this->setTemplate('niveusproductvideo/tab/videos.phtml');	}		public function getProduct()        {                $productId = (int) $this->getRequest()->getParam('id', false);                return Mage::getModel('catalog/product')->load($productId);        }		public function getVideosCollection()        {    	       $storeId = (int) $this->getRequest()->getParam('store', false);               if (is_null($this->videosCollection))    	       {    		   $this->videosCollection = Mage::getModel('productvideo/videos')    			->getCollection()    			->addFieldToFilter('product_id', $this->getProduct()->getId())                        ->addFieldToFilter('store_id', $storeId);    	       }    	    	       return $this->videosCollection;       }}