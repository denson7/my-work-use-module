<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Banner Slider</title>
        <css src="Magestore_Bannerslider::css/zebra_tooltips.css" />
        <script src="Magestore_Bannerslider::js/slider-edit-form.js" />
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Magestore_Bannerslider::bannerslider</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
        <block class="Magestore\Bannerslider\Block\Adminhtml\Slider\Edit" name="banner_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
        <block class="Magestore\Bannerslider\Block\Adminhtml\Slider\Edit\Tabs" name="banner_edit_tabs">
            <block class="Magestore\Bannerslider\Block\Adminhtml\Slider\Edit\Tab\Form" name="banner_edit_tab_form"/>
        	<action method="addTab">
                <argument name="name" xsi:type="string">main_section</argument>
                <argument name="block" xsi:type="string">banner_edit_tab_form</argument>
            </action>
            <action method="addTab">
                <argument name="name" xsi:type="string">banner_section</argument>
                <argument name="block" xsi:type="array">
                    <item name="label" xsi:type="string">Banner of Slider</item>
                    <item name="title" xsi:type="string">Banner of Slider</item>
                    <item name="url" xsi:type="helper" helper="Magestore\Bannerslider\Helper\Data::getSliderBannerUrl"></item>
                    <item name="class" xsi:type="string">ajax</item>
                </argument>
            </action>
        </block>
        </referenceContainer>
    </body>
</page>
